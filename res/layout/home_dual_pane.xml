<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<org.mariotaku.twidere.view.SlidingPaneView
		android:id="@+id/sliding_pane"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:paneFadeType="both"
		app:paneLayoutLeft="@layout/home_pane_left_content"
		app:paneLayoutRight="@layout/base_pane_right_content"
		app:paneShadowDrawable="@drawable/shadow_holo"
		app:paneShadowSlidable="@bool/shadow_slidable"
		app:paneShadowWidth="@dimen/default_dualpane_shadow_width"
		app:paneSpacingLeft="@dimen/pane_spacing_left"
		app:paneSpacingRight="@dimen/pane_spacing_right"/>

	<include layout="@layout/home_actions_button_layout"/>

</merge>